            }

            #play-again-btn:active {
                background-color: #555;
            }

            #play-again-btn.play-again-btn-entrance {
                opacity: 1;
                transform: translateX(6rem);
            }

        .dragelements {
            display: flex;
            justify-content: center;
        }

        .draggable1 {
            position:relative;
            height: 10%;
            width: 10%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4vw;
            margin: 0rem 0.5rem;
            cursor: move;
            transition: opacity 0.2s;
        }

            .draggable1:hover {
                opacity: 0.5;
            }

        .droppable1 {
            height: 6.5vw;
            width: 6.5vw;
            margin-top: 2%;
            margin-left: 3%;
            display: flex;
            justify-content: center;
            align-items: center;
