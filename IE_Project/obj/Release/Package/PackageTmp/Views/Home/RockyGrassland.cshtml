<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='~/css/hotspot3.css'>
    <style>
        .box_header {
            display: inline-block;
            width: 100%;
        }

        .box_area1 {
            float: right;
        }

        .box_area2 {
            float: left;
        }
    </style>
</head>

<body>
    <!-- bradcam_area_start -->
    <div class="bradcam_area breadcam_bg overlay">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Rocky Grassland</h3>
                </div>
            </div>
        </div>
    </div>
    <!-- bradcam_area_end -->
    <div class="container" style="padding-top:1%; padding-bottom:1%">
        <div class="section_title text-center">
            <h3>Let's see what species you can find in this grassland first</h3>
            <p>Click the hotsposts and discover species</p>
        </div>
        <div class="box_header" style="font-family: Chilanka;">
            <a class="btn bg-theme w3_pvt-link-bnr box_area2" id="gamebtn2" href='@Url.Action("Select", "Home")'
               role="button">Back</a>
            <a class="btn bg-theme w3_pvt-link-bnr box_area1" id="gamebtn2" href='@Url.Action("DragDropRocky", "Home")'
               role="button">Play</a>
        </div>
    </div>
    <div class="container_3">
        <div class="container_3">
            <input type="checkbox" class="input" id="input19" name="inputs3">
            <input type="checkbox" class="input" id="input20" name="inputs3">
            <input type="checkbox" class="input" id="input21" name="inputs3">
            <input type="checkbox" class="input" id="input22" name="inputs3">
            <input type="checkbox" class="input" id="input23" name="inputs3">
            <input type="checkbox" class="input" id="input24" name="inputs3">
            <label for="input19">
                <div id="b19" class="button">1</div>
            </label>
            <label for="input20">
                <div id="b20" class="button">2</div>
            </label>
            <label for="input21">
                <div id="b21" class="button">3</div>
            </label>
            <label for="input22">
                <div id="b22" class="button">4</div>
            </label>
            <label for="input23">
                <div id="b23" class="button">5</div>
            </label>
            <label for="input24">
                <div id="b24" class="button">6</div>
            </label>
            <div id="content19" class="content_3">
                <div style="text-align: right;">
                    <label for="input19" class="cross_3">X</label>
                </div>
                @*<h1>Golden thistle</h1>*@
                <img src="~/img/rockland/Golden Thistle.png" alt="Golden thistle" style="width: 30vw; height: auto; margin-left:4vw">
            </div>
            <div id="content20" class="content_3">
                <div style="text-align: right;">
                    <label for="input20" class="cross_3">X</label>
                </div>
                @*<h1>Hardheads</h1>*@
                <img src="~/img/rockland/Hardheads.png" alt="Scaly Buttons" style="width: 30vw; height: auto; margin-left:4vw">
                @*<br>
                    <a href="#" class="cta_2">Find out more </a>*@
            </div>

            <div id="content21" class="content_3">
                <div style="text-align: right;">
                    <label for="input21" class="cross_3">X</label>
                </div>
                @*<h1>Wheel Cactus</h1>*@
                <img src="~/img/rockland/Wheel Cactus.png" alt="Kneed Spear Grass" style="width: 30vw; height: auto; margin-left:4vw">
                @*<br>
                    <a href="#" class="cta_2">Find out more </a>*@
            </div>

            <div id="content22" class="content_3">
                <div style="text-align: right;">
                    <label for="input22" class="cross_3">X</label>
                </div>
                @*<h1>Pink-tailed Worm-Lizard</h1>*@
                <img src="~/img/rockland/Pink-tailed Worm-Lizard.png" alt="Lemon Beauty Heads" style="width: 30vw; height: auto; margin-left:4vw">
                @*<br>
                    <a href="#" class="cta_2">Find out more</a>*@
            </div>

            <div id="content23" class="content_3">
                <div style="text-align: right;">
                    <label for="input23" class="cross_3">X</label>
                </div>
                @*<h1>Alpine She-oak Skink</h1>*@
                <img src="~/img/rockland/Alpine She-oak Skink.png" alt="Rice Flowera" style="width: 30vw; height: auto; margin-left:4vw">
                @*<br>
                    <a href="#" class="cta_2">Find out more </a>*@
            </div>

            <div id="content24" class="content_3">
                <div style="text-align: right;">
                    <label for="input24" class="cross_3">X</label>
                </div>
                @*<h1>Striped Legless Lizard</h1>*@
                <img src="~/img/rockland/Striped-Legless-Lizard.png" alt="Striped Legless Lizard" style="width: 30vw; height: auto; margin-left:4vw">
                @*<br>
                    <a href="#" class="cta_2">Find out more </a>*@
            </div>
        </div>

        @*<div id="content11" class="content_2">
                <div style="text-align: right;">
                    <label for="input23" class="cross_2">X</label>
                </div>
                <h1>Alpine She-oak Skink</h1>
                <img src="~/img/riceFlower.jpg" alt="Rice Flowera" style="width: 200px; height: 200px">
                <br>
                <a href="#" class="cta_2">Find out more </a>
            </div>*@
    </div>




    </body>
</html>

